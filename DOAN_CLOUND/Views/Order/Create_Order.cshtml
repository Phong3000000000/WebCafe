
@{
    ViewBag.Title = "Create_Order";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model DOAN_CLOUND.Models.ORDER

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateDept</title>
    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js"></script>
</head>
<body>
    @using (Html.BeginForm("Create_Order", "Order", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <h3 class="mt-3" style="color: blue; font-weight: bold">ADD NEW ORDER</h3>

        <div class="editor-label">
            <h3>Add order infomation</h3>
        </div>

        <div class="editor-label">
            <p>Enter ID Customer</p>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MAKH)
            @Html.ValidationMessageFor(model => model.MAKH)
        </div>

        <div class="editor-label">
            <p>Enter Date</p>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.NGAYLAP, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NGAYLAP)
        </div>

        <div class="editor-label">
            <p>Enter total amount</p>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TONGGIA)
            @Html.ValidationMessageFor(model => model.TONGGIA)
        </div>

        <p class="form-group" style="margin-top: 20px">
            <input type="submit" class="btn btn-primary" value="Create" />
        </p>

        <div>
            @Html.ActionLink("Back to List", "Index_Order", "Home")
        </div>
    }
</body>
</html>

