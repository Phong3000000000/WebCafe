                    @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div style="max-width:100%" class="col-md-10">
                        @Html.EditorFor(model => model.Id, new { @htmlAttributes = new { @class = "form-control" } })
