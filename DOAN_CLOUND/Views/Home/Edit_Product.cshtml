
@{
    ViewBag.Title = "Edit_Product";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


@model DOAN_CLOUND.Models.Products
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="width:25%; margin:20px auto; padding:10px; box-shadow:1px 1px 2px 2px #888888; border-radius:10px">
