@model IEnumerable<DOAN_CLOUND.Models.PRODUCT>

@{
    ViewBag.Title = "Index_Products";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create_Product", "Product")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TENHANG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DVT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATE_ID)
        </th>
        <th>
     
            @Html.DisplayNameFor(model => model.HINHANH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GIA)
        </th>
        <th>
            TINHANG
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="line-height: 133px">
            <td>
                @Html.DisplayFor(modelItem => item.TENHANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATE_ID)
            </td>
            <td style="vertical-align: middle">
                @{ 
                    if (!item.HINHANH.Contains("/images/"))
                    {
                        item.HINHANH = "/images/" + item.HINHANH;
                    }
                }
                <div style="background-image: url('@Html.DisplayFor(modelItem => item.HINHANH)');
                        width: 100px;
                        background-position: center;
                        height: 100px;  
                        background-size: cover;
                        background-repeat: no-repeat;
                ">
                </div>
                @*<img src="@Html.DisplayFor(modelItem => item.HINHANH)" width="200px" style="border-radius:8px"></img>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GIA)
            </td>
            <td>
                @Html.ActionLink("Update", "Update_Product", "Product", new { id = item.ID }, null) |
                @Html.ActionLink("Delete", "Delete_Product", "Product", new { id = item.ID }, null)
            </td>
        </tr>
    }

</table>
