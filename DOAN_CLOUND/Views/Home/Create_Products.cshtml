
@{
    ViewBag.Title = "Create_Products";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model DOAN_CLOUND.Models.Products
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="width:25%; margin:20px auto; padding:10px; box-shadow:1px 1px 2px 2px #888888; border-radius:10px">
                <h3 style="text-align:center">Thêm mới một sản phẩm</h3>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.tenhang, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div style="max-width:100%" class="col-md-10">
                        @Html.EditorFor(model => model.tenhang, new { @htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tenhang, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.dvt, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div style="max-width:100%" class="col-md-10">
                        @Html.EditorFor(model => model.dvt, new { @htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.dvt, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.cate_id, htmlAttributes: new { @class = "control-label col-md-10" })
                    <div style="max-width:100%" class="col-md-10">
                        @Html.EditorFor(model => model.cate_id, new { @htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cate_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <br />
                        <br />
                        <p>
                            @Html.ActionLink("Back to List", "Index_Products", "", new { @class = "btn btn-info" })
                        </p>

                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</div>


