
@{
    ViewBag.Title = "Details_Products";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@model DOAN_CLOUND.Models.Products
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <div class="form-horizontal" style="width:25%; margin:20px auto; padding:10px; box-shadow:1px 1px 2px 2px #888888; border-radius:10px">
                <h4>Thông Tin Loại Hàng </h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>Tên hàng</dt>
                    <dd>@Model.tenhang</dd>

                    <dt>Đơn vị tính</dt>
                    <dd>@Model.dvt</dd>

                    <dt>Mã loại</dt>
                    <dd>@Model.cate_id</dd>
                    <p>
                        @Html.ActionLink("Back to List", "Index_Products", "", new { @class = "btn btn-info" })
                    </p>
                </dl>
            </div>

        </div>
    </div>
</div>

